<p id="notice"><%= notice %></p>

<h1>Todo Items</h1>

<table>
    <h2 style="color: turquoise"> Completed ToDos </h2>
     <thead>
       <tr>
        <th>Description</th>
        <th>Due date</th>
        <th>Activity</th>
        <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @todo_items.completed.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= todo_item.due_date %></td>
        <td><%= todo_item.activity %></td>
        <td><%= link_to 'Show', todo_item %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr> 
    <% end %>
  </tbody>
</table>

<br>


<table>
    <h2 style="color: red"> Non-Complete ToDos </h2>
     <thead>
       <tr>
        <th>Description</th>
        <th>Due date</th>
        <th>Activity</th>
        <th colspan="3"></th>
    </tr>
  </thead>

   <tbody>
    <% @todo_items.uncompleted.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= todo_item.due_date %></td>
        <td><%= todo_item.activity %></td>
        <td><%= link_to 'Show', todo_item %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr> 
    <% end %>
  </tbody>
</table>
